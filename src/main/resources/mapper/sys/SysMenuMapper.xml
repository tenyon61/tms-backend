<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tms.web.mapper.sys.SysMenuMapper">

    <resultMap id="BaseResultMap" type="com.tms.web.model.entity.sys.SysMenu">
            <id property="id" column="id" />
            <result property="parentId" column="parentId" />
            <result property="title" column="title" />
            <result property="code" column="code" />
            <result property="name" column="name" />
            <result property="path" column="path" />
            <result property="url" column="url" />
            <result property="type" column="type" />
            <result property="icon" column="icon" />
            <result property="parentName" column="parentName" />
            <result property="orderNum" column="orderNum" />
            <result property="createTime" column="createTime" />
            <result property="updateTime" column="updateTime" />
    </resultMap>

    <sql id="Base_Column_List">
        id,parentId,title,code,name,path,
        url,type,icon,parentName,orderNum,
        createTime,updateTime
    </sql>
    <select id="getMenuByUserId" resultType="com.tms.web.model.entity.sys.SysMenu">
        select DISTINCT m.*
        from sys_user_role as ur
                 left join sys_role as r on ur.roleId = r.id
                 left join sys_role_menu as rm on ur.roleId = rm.roleId
                 left join sys_menu as m on rm.menuId = m.id
        where ur.userId = #{userId}
        order by m.orderNum asc
    </select>
    <select id="getMenuByRoleId" resultType="com.tms.web.model.entity.sys.SysMenu">
        select DISTINCT m.*
        from sys_role_menu as rm
                 left join sys_menu as m on rm.menuId = m.id
        where rm.roleId = #{roleId}
        order by m.orderNum asc
    </select>
</mapper>
